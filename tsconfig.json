{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2016", "dom", "es2017", "es6", "es5"],
    "watch": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "./*.test.ts"
  ]
}